<div class='nav-tree'>
  <% @pages.each do |page| %>

    <div>
      <div class='page__title'>
        <i class="fa fa-arrow-right" aria-hidden="true"></i></i>
        <h1><%= page.title %></h1>
      </div>
      <% page.sections.each do |section| %>
        <div class='section__title'>
          <h2><%= section.title %></h2>
        </div>
      <% end %>
    </div>

  <% end %>
</div>
